{% extends 'admin.html.twig' %}

{% block menu %}
    {{ include('adminmenu.html.twig', {'active': 'equipe'}) }}
{% endblock %}

{% block body %}
<div class="admin-container">
    <div class="modal-body">
        <h1>Modifica {{ equipe.name|title }}</h1>

        {{ form_start(edit_form) }}
            {{ form_row(edit_form.name, {label:'Nome'}) }}
            {{ form_row(edit_form.role, {label:'Ruolo'}) }}
            {{ form_row(edit_form.text, {label:'Descrizione'}) }}
            {# TODO: implementare caricamento foto #}            
            {{ form_row(edit_form.file, {label:'Foto'}) }}
            {{ form_row(edit_form.email) }}
        <input class="btn btn-warning" type="submit" value="Modifica" />
        {{ form_end(edit_form) }}

        <ul class="admin-actions admin-actions-show">
            <li>
                <a class="btn btn-success" href="{{ path('admin_equipe_index') }}">Torna alla lista</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Elimina">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
</div>
{% endblock %}
