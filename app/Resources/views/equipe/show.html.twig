{% extends 'base.html.twig' %}

{% block body %}
    <h1>Equipe</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ equipe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ equipe.name }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ equipe.role }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ equipe.text }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ equipe.photo }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ equipe.email }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_equipe_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_equipe_edit', { 'id': equipe.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
