{% extends 'admin.html.twig' %}

{% block menu %}
    {{ include('adminmenu.html.twig', {'active': 'equipe'}) }}
{% endblock %}

{% block body %}
<div class="admin-container">
    <h1>{{ equipe.name|title }}</h1>

    <div class="modal-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <tbody>
                    <tr>
                        <th>Nome</th>
                        <td>{{ equipe.name }}</td>
                    </tr>
                    <tr>
                        <th>Ruolo</th>
                        <td>{{ equipe.role }}</td>
                    </tr>
                    <tr>
                        <th>Descrizione</th>
                        <td>{{ equipe.text|raw }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ equipe.email }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <ul class="admin-actions admin-actions-show">
            <li>
                <a class="btn btn-success" href="{{ path('admin_equipe_index') }}">Torna alla lista</a>
            </li>
            <li>
                <a class="btn btn-warning" href="{{ path('admin_equipe_edit', { 'id': equipe.id }) }}">Modifica</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Elimina">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
</div>
{% endblock %}
