{% extends 'admin.html.twig' %}

{% block body %}
<div class="admin-container">
    <div class="modal-body">
        <h1>Amministrazione Eventi</h1>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Data</th>
                        <th>Nome Evento</th>
                        <th>Luogo</th>
                        <th>Testo</th>
                        <th>Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    {% for event in events %}
                    <tr>
                        <td>{% if event.date %}{{ event.date|date('d-m-Y') }}{% endif %}</td>
                        <td>{{ event.name }}</td>
                        <td>{{ event.place }}</td>
                        <td>{{ event.text|truncate(100, true) }}</td>
                        <td>
                            <ul class="admin-actions">
                                <li>
                                    <a class="btn btn-success" href="{{ path('admin_event_show', { 'id': event.id }) }}">Mostra Evento</a>
                                </li>
                                <li>
                                    <a class="btn btn-warning" href="{{ path('admin_event_edit', { 'id': event.id }) }}">Modifica Evento</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <ul>
            <li>
                <a class="btn btn-success" href="{{ path('admin_event_new') }}">Crea un nuovo evento</a>
            </li>
        </ul>
    </div>
</div>
{% endblock %}
