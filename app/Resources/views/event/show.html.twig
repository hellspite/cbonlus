{% extends 'admin.html.twig' %}

{% block body %}
<div class="admin-container">
    <h1>{{ event.name|title }}</h1>

    <div class="modal-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <tbody>
                    <tr>
                        <th>Nome Evento</th>
                        <td>{{ event.name }}</td>
                    </tr>
                    <tr>
                        <th>Data</th>
                        <td>{% if event.date %}{{ event.date|date('d-m-Y') }}{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Luogo</th>
                        <td>{{ event.place }}</td>
                    </tr>
                    <tr>
                        <th>Testo</th>
                        <td>{{ event.text|raw }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <ul class="admin-actions admin-actions-show">
            <li>
                <a class="btn btn-success" href="{{ path('admin_event_index') }}">Torna alla lista</a>
            </li>
            <li>
                <a class="btn btn-warning" href="{{ path('admin_event_edit', { 'id': event.id }) }}">Modifica</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Elimina">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
</div>
{% endblock %}
