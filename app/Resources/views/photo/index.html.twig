{% extends 'admin.html.twig' %}

{% block body %}
<div class="admin-container">
    <h3>Amministrazione Foto</h3>

    <div class="modal-body">

        <a class="btn btn-success" href="{{ path('admin_foto_new') }}">Crea nuovo</a>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Foto</th>
                        <th>Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    {% for photo in photos %}
                    <tr>
                        <td><img src="{{ photo.image }}" class="img-responsive" /></td>
                        <td>
                            <ul class="admin-actions">
                                <li>
                                    <a class="btn btn-success" href="{{ path('admin_foto_show', { 'id': photo.id }) }}">Mostra</a>
                                </li>
                                <li>
                                    <a class="btn btn-warning" href="{{ path('admin_foto_edit', { 'id': photo.id }) }}">Modifica</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <a class="btn btn-success" href="{{ path('admin_foto_new') }}">Crea nuovo</a>
    </div>
</div>
{% endblock %}
