{% extends 'admin.html.twig' %}

{% block menu %}
    {{ include('adminmenu.html.twig', {'active': 'photo'}) }}
{% endblock %}

{% block body %}
<div class="admin-container">
    <h3>Album</h3>

    <div class="modal-body">

        <a class="btn btn-success" href="{{ path('admin_photoalbum_new') }}">Nuovo Album</a>

        <div class="table-responsive">
            <table class="table talbe-striped table-hover">
                <thead>
                    <tr>
                        <th>Album</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    {% for album in albums %}
                    <tr>
                        <td>{{ album.name|title }}</td>
                        <td>
                            <ul class="admin-actions">
                                <li>
                                    <a class="btn btn-warning" href="{{ path('admin_photoalbum_edit', { 'id': album.id }) }}">Modifica</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <a class="btn btn-success" href="{{ path('admin_photoalbum_new') }}">Nuovo Album</a>

    </div>

    <h3>Amministrazione Foto</h3>

    <div class="modal-body">

        <a class="btn btn-success" href="{{ path('admin_foto_new') }}">Nuova Foto</a>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Foto</th>
                        <th>Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    {% for photo in photos %}
                    <tr>
                        <td><img src="{{ asset(['/images/gallery/', photo.image]|join) }}" class="img-responsive" /></td>
                        <td>
                            <ul class="admin-actions">
                                <li>
                                    <a class="btn btn-success" href="{{ path('admin_foto_show', { 'id': photo.id }) }}">Mostra</a>
                                </li>
                                <li>
                                    <a class="btn btn-warning" href="{{ path('admin_foto_edit', { 'id': photo.id }) }}">Modifica</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <a class="btn btn-success" href="{{ path('admin_foto_new') }}">Nuova Foto</a>
    </div>
</div>
{% endblock %}
