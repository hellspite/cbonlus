{% extends 'admin.html.twig' %}

{% block body %}
    <h3>Modifica album: {{ photoAlbum.name|title }}</h3>

    {{ form_start(edit_form) }}
        {{ form_row(edit_form.name, {label: 'Nome Album'}) }}
        {{ form_row(edit_form.createdAt, {label: 'Data Creazione'}) }}
        <input class="btn btn-warning" type="submit" value="Modifica" />
    {{ form_end(edit_form) }}

    <ul class="admin-actions admin-actions-show">
        <li>
            <a class="btn btn-success" href="{{ path('admin_foto_index') }}">Torna alla lista</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Elimina">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
