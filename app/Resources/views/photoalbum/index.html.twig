{% extends 'admin.html.twig' %}

{% block menu %}
    {{ include('adminmenu.html.twig', {'active': 'photo'}) }}
{% endblock %}

{% block body %}
<div class="admin-container">
    <h3>Album</h3>

    <div class="modal-body">

        <a class="btn btn-success" href="{{ path('admin_photoalbum_new') }}">Nuovo Album</a>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Album</th>
                        <th>Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    {% for photoAlbum in photoAlbums %}
                    <tr>
                        <td><a href="{{ path('admin_photoalbum_show', { 'id': photoAlbum.id }) }}">{{ photoAlbum.name }}</a></td>
                        <td>
                            <ul class="admin-actions">
                                <li>
                                    <a class="btn btn-success" href="{{ path('admin_photoalbum_show', { 'id': photoAlbum.id }) }}">Mostra</a>
                                </li>
                                <li>
                                    <a class="btn btn-warning" href="{{ path('admin_photoalbum_edit', { 'id': photoAlbum.id }) }}">Modifica</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <a class="btn btn-success" href="{{ path('admin_photoalbum_new') }}">Nuovo Album</a>
</div>
{% endblock %}
