{% extends 'admin.html.twig' %}

{% block menu %}
    {{ include('adminmenu.html.twig', {'active': 'photo'}) }}
{% endblock %}

{% block body %}
<div class="admin-container">
    <h3>Nuovo Album</h3>

    {{ form_start(form) }}
        {{ form_row(form.name, {label: 'Nome Album'}) }}
        {{ form_row(form.createdAt, {label: 'Data Creazione'}) }}
    <input class="btn btn-success" type="submit" value="Crea" />
    {{ form_end(form) }}

    <ul class="admin-actions admin-actions-show">
        <li>
            <a class="btn btn-success" href="{{ path('admin_foto_index') }}">Torna alla lista</a>
        </li>
    </ul>
</div>
{% endblock %}
