{% extends 'base.html.twig' %}

{% block body %}
    <h1>Photoalbum</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ photoAlbum.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ photoAlbum.name }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if photoAlbum.createdAt %}{{ photoAlbum.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_photoalbum_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_photoalbum_edit', { 'id': photoAlbum.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
