{% extends 'admin.html.twig' %}

{% block body %}
<div class="admin-container">
    <h1>{{ post.title|title}}</h1>

    <div class="modal-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <tbody>
                    <tr>
                        <th>Data</th>
                        <td>{% if post.date %}{{ post.date|date('d-m-Y') }}{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Titolo</th>
                        <td>{{ post.title }}</td>
                    </tr>
                    <tr>
                        <th>Testo</th>
                        <td>{{ post.text|raw }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <ul class="admin-actions admin-actions-show">
            <li>
                <a class="btn btn-success" href="{{ path('admin_news_index') }}">Torna alla lista</a>
            </li>
            <li>
                <a class="btn btn-warning" href="{{ path('admin_news_edit', { 'id': post.id }) }}">Modifica</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Elimina">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
</div>
{% endblock %}
