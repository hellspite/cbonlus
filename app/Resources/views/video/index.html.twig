{% extends 'admin.html.twig' %}

{% block menu %}
    {{ include('adminmenu.html.twig', {'active': 'video'}) }}
{% endblock %}

{% block body %}
<div class="admin-container">
    <h3>Amministrazione Video</h3>

    <div class="modal-body">

        <a class="btn btn-success" href="{{ path('admin_video_new') }}">Crea nuovo</a>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Indirizzo Video</th>
                        <th>Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    {% for video in videos %}
                    <tr>
                        <td>
                            <div class="video embed-responsive embed-responsive-16by9">    
                                <iframe class="embed-responsive-item" src="{{ video.url }}" frameborder="0" allowfullscreen></iframe>
                            </div>
                        </td>
                        <td>
                            <ul class="admin-actions">
                                <li>
                                    <a class="btn btn-success" href="{{ path('admin_video_show', { 'id': video.id }) }}">Mostra</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <a class="btn btn-success" href="{{ path('admin_video_new') }}">Crea nuovo</a>
    </div>
</div>
{% endblock %}
