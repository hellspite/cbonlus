{% extends 'admin.html.twig' %}

{% block body %}
<div class="admin-container">
    <h3>Nuovo Video</h3>

    <div class="modal-body">
        {{ form_start(form) }}
        {{ form_row(form.url, {label: 'Indirizzo Video'}) }}
        {{ form_row(form._token) }}
        <input class="btn btn-success" type="submit" value="Crea" />

        <ul class="admin-actions admin-actions-show">
            <li>
                <a class="btn btn-success" href="{{ path('admin_video_index') }}">Torna alla lista</a>
            </li>
        </ul>
    </div>
</div>
{% endblock %}
