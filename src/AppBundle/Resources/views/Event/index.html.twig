{% extends "::base.html.twig" %}

{% block title %}{{ parent() }} - Prossimi Eventi{% endblock %}

{% block menu %}
    {{ include('menu.html.twig', {'active': 'event'}) }}
{% endblock %}

{% block body %}
    <div class="img-head">
        <img src="{{ asset('images/eventi.jpg') }}" class="img-responsive" />
    </div>

    <div class="container-fluid main-box">
        <div class="row">
            <div class="col-sm-12 main-cell">
                <h3>Prossimi Eventi</h3>
                {% for e in events %}
                <div class="event-homepage row">
                    <div class="date col-sm-1 col-sm-offset-1">
                        <div class="day">{{ e.date|date('d') }}</div>
                        <div class="month-year">
                            {% if e.date|date('m') == 1 %}
                            Gen
                            {% elseif e.date|date('m') == 2 %}
                            Feb
                            {% elseif e.date|date('m') == 3 %}
                            Mar
                            {% elseif e.date|date('m') == 4 %}
                            Apr
                            {% elseif e.date|date('m') == 5 %}
                            Mag
                            {% elseif e.date|date('m') == 6 %}
                            Giu
                            {% elseif e.date|date('m') == 7 %}
                            Lug
                            {% elseif e.date|date('m') == 8 %}
                            Ago
                            {% elseif e.date|date('m') == 9 %}
                            Set
                            {% elseif e.date|date('m') == 10 %}
                            Ott
                            {% elseif e.date|date('m') == 11 %}
                            Nov
                            {% elseif e.date|date('m') == 12 %}
                            Dic
                            {% endif %}
                            {{ e.date|date("Y") }}
                        </div>
                    </div>
                    <div class="event-content col-sm-10">
                        <a href="{{ path('event_show', {id: e.id}) }}"><h1>{{ e.name }}</h1></a>
                        <p>
                            {{ e.text|truncate(50, true)|raw }}
                            {% if e.text|length > 50 %}
                                <a href="{{ path('event_show', {id: e.id}) }}">continua a leggere</a>
                            {% endif %}
                        </p>
                    </div>
                </div>
                {% endfor %}
                {% if past %}
                    <a href="{{ path('past_events') }}">Eventi passati</a>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
