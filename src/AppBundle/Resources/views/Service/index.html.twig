{% extends "::base.html.twig" %}

{% block title %}{{ parent() }} - Servizi Integrativi{% endblock %}

{% block body %}
    <div class="img-head">
        <img src="{{ asset('images/integrativi.jpg') }}" class="img-responsive" />
    </div>

    <div class="link">
        <h3>Servizi Integrativi:</h3>
    </div>
    <div class="container-fluid main-box">
        <div class="row">
            <div class="col-sm-12 main-cell services">
                {% for service in services %}
                    <h3>{{ service.title|title }}</h3>
                    <a href="{{ asset(['uploads/documenti/', service.document] | join)}}"><img src="{{ asset('images/pdf.png') }}" class="pdf-icon" /></a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
